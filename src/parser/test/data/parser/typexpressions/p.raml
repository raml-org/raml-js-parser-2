#%RAML 1.0
title: Demonstration of types
types:
  moneyPrice: number
  Product:
    discriminator: kind
    properties:
      kind: string
      name: string
      price:
        type: moneyPrice
    examples:
      e0:
          "kind": "cell phone"
          "name": "Nokia"
          "price": 200
      e1:
          "kind": "Car"
          "name": "Ford"
          "price": 20000
          "gallonsPerMile": 0.1

  Car:
    type: Product
    discriminatorValue: Car
    properties:
      gallonsPerMile: number

  CellPhone:
    type: Product
    discriminatorValue: cell phone

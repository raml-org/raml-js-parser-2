#%RAML 1.0
title: CustomSecurityScheme API
version: 1
baseUri: https://api.custom.com/{version}
securitySchemes:
     custom_scheme:
        description: |
            A custom security scheme for authenticating requests.
        type: x-custom
        describedBy:
            headers:
                SpecialToken:
                    description: |
                       Used to send a custom token.
                    type: string
            responses:
                401:
                    description: |
                        Bad token.
                403:
                    description: |
                        Bad authentication request.
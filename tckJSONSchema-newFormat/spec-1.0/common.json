{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "Annotable": {
      "type": "object",
      "properties": {
        "annotations": {
          "description": "Most of RAML model elements may have attached annotations decribing additional meta data about this element",
          "oneOf": [
            {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9]+": {"$ref": "#/definitions/AnnotationInstance"}
              }
            },
            {
              "type": "object",
              "patternProperties": {
                "^[a-zA-Z0-9]+": {
                  "type": "array",
                  "items": {"$ref": "#/definitions/AnnotationInstance"}
                }
              }
            }
          ]
        },
        "scalarsAnnotations": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9]+": {
              "type": "array",
              "items": {
                "oneOf": [
                  {"$ref": "#/definitions/AnnotationInstance"},
                  {
                    "type": "array",
                    "items": {"$ref": "#/definitions/AnnotationInstance"}
                  }
                ]
              }
            }
          }
        }
      }
    },
    "AnnotationInstance": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "structuredValue": {
          "type": ["object", "string", "boolean", "number", "array", "null"]
        }
      },
      "additionalProperties": {"$ref": "#/definitions/PatternProperties"}
    },
    "FragmentDeclaration": {
      "allOf":[
        {"$ref": "#/definitions/Annotable"},
        {
          "properties": {
            "uses": {
              "type": "array",
              "items": {"$ref": "#/definitions/UsesDeclaration"}
            }
          }
        }
      ]
    },
    "UsesDeclaration": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "PatternProperties": {
      "description": "Template property."
    }
  }
}